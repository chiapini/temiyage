<body>
<%= render "shared/header" %>

 <%= form_with model: @tweet, id:"form",local: true do |f| %> 

<div class = main2>
  <%= render 'shared/error_messages', model: f.object %>
   <div class = registration_main >
   <p class = registration_p>商品情報</p>
    <div class = field_box>
    <p>クリックしてファイルをアップロード<br>(画像は正方形のものを用意して下さい)</p>
    <div id="previews"></div>
    <%= f.file_field :images,name: 'tweet[images][]', data: {index: 0},id:"item-image"%><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"collection"}) %><br>
    <label class = text>ブランド名<br>
    <%= f.text_field :shop_name,class: "field",placeholder:"例) フィリップ・ジョエル", maxlength:"40" %></label><br>
     <label class = text>商品の名前<br>
    <%= f.text_field :item_name,class: "field",placeholder:"例)カヌレ 詰め合わせ", autofocus: true %></label><br>
    <label class = text>商品PR<br>
    <%= f.text_area :information,class: "field",placeholder:"＊500文字以内で入力して下さい＊",maxlength: 500 %></label><br>
    <label class = text>販売箇所<br>
    <%= f.text_area :area,class: "field",placeholder:"例)横浜丸光百貨店・銀座大倉ビル",maxlength: 300 %></label><br>
     <label class = text >内容量<br>
    <%= f.text_area :capacity,class: "field",placeholder:"例)プレーン、メイプル、かぼちゃ各１点づつ" %></label><br>
     <label class = text >賞味期限<br>
    <%= f.text_field :expiry,class: "field",placeholder:"例)製造から3日" %></label><br>
    <label class = text >個数<br>
    <%= f.text_field :quantity,class: "field",placeholder:"例)3個" %></label><br>
    <label class = text >税込価格<br>
    <%= f.text_field :price,class: "field",placeholder:"例)1300" %></label><br>
    <label class = text >保存方法<br>
    <%= f.text_field :keep,class: "field",placeholder:"例)常温" %></label><br>
    <label class = text >アレルギー源<br>
    <%= f.text_field :allergy,class: "field",placeholder:"例)小麦、卵、乳" %></label><br>
    <label class = text >お店のURL<br>
    <%= f.text_field :url,class: "field",placeholder:"＊必須ではありません＊" %></label><br>
    <label>
    <input type="checkbox" value="1" name="tweet[event_id]">
    イベント限定商品</label>
    </div>



     <div class = edit_btn_box>
     <%= f.submit "変更する" ,class:"register-btn"  %>
      <%=link_to 'もどる', tweet_path(@tweet.id), class:"edit-btn" %>
    </div><br>
</div>
</div>

 <% end %> 
</div>
</div>

<%= render "shared/footer" %>

</body>