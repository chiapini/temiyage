<body>
<%= render "shared/header" %>

 <%= form_with model: @user, url:user_registration_path , class: 'registration_main', local: true do |f| %> 


<div class = main2>
 <%= render 'shared/error_messages', model: @user  %>

 <div class = registration_main >

   <p class = registration_p>新規会員登録</p>
    <div class = field_box>
    <label class = text>ニックネーム<br>
    <%= f.text_field :nickname,class: "field",placeholder:"例) 山田太郎", maxlength:"40" %></label><br>
     <label class = text>メールアドレス<br>
    <%= f.email_field :email,class: "field",placeholder:"PC・携帯どちらでも可", autofocus: true %></label><br>
    <label class = text>パスワード<br>
    <%= f.password_field :password,class: "field",placeholder:"6文字以上の半角英数字" %></label><br>
     <label class = text >確認用パスワード<br>
    <%= f.password_field :password_confirmation,class: "field",placeholder:"同じパスワードを入力して下さい" %></label><br>
    </div>


    <p class = registration_p>あなたの情報を教えて下さい</p>
    <div class = select>
     <label><%= f.radio_button :gender, "1" %>女性</label>
     <label ><%= f.radio_button :gender, "2" %>男性</label>
     <label ><%= f.radio_button :gender, "3" %>その他</label>
    </div>

    <div class = select>
     <label ><%= f.radio_button :situation, "1" %>未婚</label>
     <label ><%= f.radio_button :situation, "2" %>既婚</label>
    </div>

    <div class = select>
     <label><%= f.radio_button :children, "1" %>子あり</label>
     <label><%= f.radio_button :children, "2" %>子なし</label>
    </div>

   <div class = select_box>
    <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"collection"}) %>
    <%= f.collection_select(:job_id, Job.all, :id, :name, {},{class:"collection"}) %>
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"collection"}) %>
    <%= f.collection_select(:think_id, Think.all, :id, :name, {}, {class:"collection"}) %>
       <%= f.submit "新規登録"  ,class:"register-btn" %><br>
   </div>

</div>

 <% end %> 

</div>

<%= render "shared/footer" %>

</body>